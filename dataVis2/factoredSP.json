
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
 "title": {"text": "Happiness Rank and Total Alcohol Consumption",
  "anchor": "middle"},
  "data": {"url": "https://mdudley98.github.io/FIT3179/alcoholHappiness.csv"},
  "transform": [{"calculate": "datum[Parameter_Selection]", "as": "Parameter"}],
  "width": "container",
  "params": [
    {
      "name": "Parameter_Selection",
      "value": "GDPPerCapita",
      "bind": {
        "input": "select",
        "options": [
          "GDPPerCapita",
          "Family",
          "LifeExpectancy",
          "Freedom",
          "GovernmentTrust",
          "Generosity"
        ],
        "name": "Select Parameter",
        "labels": [
          "GDP Per Capita",
          "Family",
          "Life Expectancy",
          "Freedom",
          "Government Trust",
          "Generosity"
        ]
      }
    }
  ],
  "repeat": ["HappinessRank", "TotalAlcPerCapita"],
  "spec": {
    "height": "container",
    "width": "container",
    "mark": {"type": "circle", "size": "60"},
    "selection": {
      "region_select": {
        "type": "single",
        "fields": ["Region"],
        "bind": "legend"
      }
    },
    "encoding": {
      "y": {
        "field": {"repeat": "repeat"},
        "type": "quantitative",
        "sort": "ascending",
        "axis": {"labelAngle": 0, "labelOverlap": "parity"}
      },
      "x": {
        "field": "Parameter",
        "type": "quantitative",
        "axis": {"labelOverlap": "parity", "title": "Selected Parameter"}
      },
      "color": {
        "field": "Region",
        "scale": {
          "range": [
            "#e41a1c",
            "#377eb8",
            "#4daf4a",
            "#984ea3",
            "#ff7f00",
            "#ffff33",
            "#a65628",
            "#f781bf",
            "#999999"
          ]
        }
      },
      "opacity": {
        "condition": {"selection": "region_select", "value": 1},
        "value": 0.2
      },
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {
          "field": "HappinessRank",
          "type": "ordinal",
          "title": "Happiness Rank"
        },
        {
          "field": "TotalAlcPerCapita",
          "type": "quantitative",
          "title": "Total Consumption (Litres Per Capita)"
        },
        {"field": "Parameter"}
      ]
    }
  },
  "config": {}
}

